    "prisma-studio": "npx prisma studio",
    "prisma-reset": "npx prisma db push --force-reset"
  },
  "dependencies": {
    "@persian-tools/persian-tools": "^3.4.1",
    "@prisma/client": "^4.3.1",
    "@remix-run/css-bundle": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@remix-run/server-runtime": "^1.16.1",
    "@smastrom/react-rating": "^1.3.1",
    "@types/leaflet": "^1.9.3",
    "isbot": "^3.6.8",
    "leaflet": "^1.9.4",
    "melipayamak": "^1.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "sanitize.css": "^13.0.0",
    "tsx": "^3.12.7"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.38.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
