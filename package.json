{
  "private": true,
  "name": "snappfood-clone",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build",
    "typecheck": "tsc",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|jsx|tsx|css|ts)\"",
    "prepare": "husky install",
    "prisma-format": "npx prisma format",
